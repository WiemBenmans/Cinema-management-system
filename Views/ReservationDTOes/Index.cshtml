@model IEnumerable<cinema.Model.ReservationDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.clientres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.planification)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.clientres.email)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.planification)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idRéservation">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idRéservation">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idRéservation">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
